<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="styleEditIniciar">
        <item name="android:ems">10</item>
        <item name="android:background">#ffffffff</item>
        <item name="android:layout_marginTop">7dip</item>
        <item name="android:layout_marginBottom">6dip</item>
        <item name="android:layout_marginRight">14dip</item>
        <item name="android:layout_marginLeft">14dip</item>
    </style>
  
    <style name="styleRegistrarBarraSup">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dip</item>
    </style>
    
    <style name="styleComenzarText" parent="android:Widget.TextView">
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:padding">8dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">#ff222222</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="styleLayoutMain">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">30dip</item>
        <item name="android:paddingLeft">30dip</item>
        <item name="android:paddingRight">30dip</item>
        <item name="android:paddingTop">30dip</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="TextLabel" parent="Theme.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">20sp</item>
        <!--<item name="android:theme">@style/Theme.AppCompat</item>-->
        <item name="android:colorAccent">@color/black</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="mytext" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SlideToActView">
        <item name="text">SlideToActView</item>
        <item name="text_size">@dimen/slidetoact_default_text_size</item>
        <item name="area_margin">@dimen/slidetoact_default_area_margin</item>
        <item name="inner_color">?android:colorBackground</item>
        <item name="outer_color">@color/orange</item>
        <item name="slider_locked">false</item>
    </style>

</resources>
