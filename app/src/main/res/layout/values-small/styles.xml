<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="styleEditIniciar" parent="android:Widget.Holo.Light.EditText">
        <item name="android:ems">10</item>
        <item name="android:background">#ffffffff</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:layout_marginBottom">4dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_marginLeft">10dip</item>
    </style>
  
    <style name="styleRegistrarBarraSup">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30dip</item>
    </style>
    
    <style name="styleComenzarText" parent="android:Widget.TextView">
        <item name="android:layout_marginTop">3dip</item>
        <item name="android:padding">8dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">#ff222222</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="styleLayoutMain">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">30dip</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingRight">20dip</item>
        <item name="android:paddingTop">30dip</item>
    </style>
</resources>
